<%= simple_form_for(@complaint) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs col-md-6" data-module="ui/state-selector">
    <%= f.input :address %>
    <%= f.input :cep %>
		<%= f.attachment_field :picture, direct: true, class: 'filestyle', :'data-icon' => 'false' %>
		<br />
    <%= f.button :submit %>
	</div>
	<div class="col-md-6">
    <%= f.input :state_id, collection: @states, label: 'Estado' %>
    <%= f.input :city_id, collection: @states, as: :grouped_select,
			group_method: :cities, label: 'Cidade' %>
  </div>

  <div class="form-actions">
  </div>
<% end %>
